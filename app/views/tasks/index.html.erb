<h1>Listing tasks</h1>

<p>Search: </p>
<%= form_tag(tasks_path, method: :get) do %>
  <%= text_field_tag :search, params[:search], placeholder: "keywords" %>
  <%= submit_tag 'Search', name: nil %>
<% end %>

<br />

<% if @tasks.blank? %>
  <h4>There are no tasks containing the keyword &quot;<%= params[:search] %>&quot;.</h4>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>Complete</th>
    <th>Due Date</th>
    <th>Term</th>      
  </tr>
 
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.name %></td>
      <td><%= task.complete %></td>
      <td><%= task.due_date %></td>
      <td><%= task.term %></td>                
    </tr>
  <% end %>
</table>
<br />
<%= link_to 'Add a new task', new_task_path %><br />
<%= link_to 'Home', root_path %>
